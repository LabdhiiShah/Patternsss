#include<iostream>
using namespace std;

// _ _ _ 1
// _ _ 2 3
// _ 4 5 6
// 7 8 9 10

int main(){
 int n;
 cin>>n;
 int count=1;
    for(int i=1;i<=n;i++){
      for(int space= 1 ;space <= (n-i) ;space++){
         cout<<"_ ";
        }
    for(int j=1;j<=i;j++){
        cout<<count;
        count++;
        cout<<" ";
    }
    cout<<endl;
    }
    return 0;
}
